@model MongoApp.DTO.UpdateDto.UserUpdateDto

@{
    ViewData["Title"] = "Admin Update User";
}

<h2>Update User</h2>

<div class="container">
    @if (ViewBag.ToastMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.ToastMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>
<div class="container mt-5">
    <h2 class="text-center">Update User</h2>
    <div class="row mt-3">
        <!-- Left half with the picture -->
        <div class="col-md-6 d-flex align-items-center">
            <div class="mx-auto">
                <!-- Replace the src attribute with the URL of your image -->
                <img src="~/profile.jpg" style="width: 300px; height: 300px; border-radius: 100%;" class="img-fluid">
            </div>
        </div>
        <div class="col-md-6">
            <form method="post" asp-action="UpdateUser" asp-controller="Update" class="mt-3">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" /> <!-- Hidden input for userId -->
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Password" /> <!-- Hidden input for userId -->
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Role" /> <!-- Hidden input for userId -->
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Status" /> <!-- Hidden input for userId -->
                    </div>
                    <div class="form-group">
                        <label for="userName">User Name:</label>
                        <input type="text" id="UserName" name="UserName" value="@Model.UserName" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="age">Age:</label>
                    <input type="number" id="Age" name="Age" value="@Model.Age" class="form-control" required />
                    </div>
                    <div class="form-group">
                    <label for="Email">Email:</label>
                    <input type="email" id="Email" name="Email" value="@Model.Email" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="Phonenumber">Phone Number:</label>
                    <input type="text" id="Phonenumber" name="Phonenumber" value="@Model.Phonenumber" class="form-control" required />
                    </div>
                <div class="form-group text-center" style="margin-top:5px">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Login" asp-controller="Login" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>
