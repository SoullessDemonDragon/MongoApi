@model MongoApp.DTO.UpdateDto.UpdatePasswordDto

@{
    ViewData["Title"] = "Update Password";
}

<div class="container">
    @if (ViewBag.ToastMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.ToastMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<div class="container mt-5">
    <h2 class="text-center">Update Password</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="UpdatePassword" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" /> <!-- Hidden input for userId -->
                </div>
                <div class="form-group">
                    <label asp-for="Curr_Password" class="control-label">Current Password:</label>
                    <input asp-for="Curr_Password" class="form-control" />
                    <span asp-validation-for="Curr_Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="New_Password" class="control-label">New Password:</label>
                    <input asp-for="New_Password" class="form-control" />
                    <span asp-validation-for="New_Password" class="text-danger"></span>
                </div>
                <div class="text-center mt-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                    <a asp-action="Login" asp-controller="Login" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
