@model MongoApp.DTO.UpdateDto.AdminUpdateDto

@{
    ViewData["Title"] = "Admin Update User";
}

<h2>Update User</h2>

<div class="container">
    @if (ViewBag.ToastMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.ToastMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<div class="container mt-5">
    <h2 class="text-center">Update User</h2>
    <div class="row mt-3">
        <!-- Left half with the picture -->
        <div class="col-md-6 d-flex align-items-center">
            <div class="mx-auto">
                <!-- Replace the src attribute with the URL of your image -->
                <img src="~/profile.jpg" style="width: 300px; height: 300px; border-radius: 100%;" class="img-fluid">
            </div>
        </div>
        <div class="col-md-6">
            <form method="post" asp-action="AdminUpdateUser" asp-controller="Update" class="mt-3">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" /> <!-- Hidden input for userId -->
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Password" /> <!-- Hidden input for userId -->
                </div>
                <div class="form-group">
                    <label for="UserName">User Name:</label>
                    <input type="text" id="UserName" name="UserName" value="@Model.UserName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Name">Name:</label>
                    <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Age">Age:</label>
                    <input type="number" id="Age" name="Age" value="@Model.Age" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input type="email" id="Email" name="Email" value="@Model.Email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Phonenumber">Phone Number:</label>
                    <input type="text" id="Phonenumber" name="Phonenumber" value="@Model.Phonenumber" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Role">Role:</label>
                    <select id="Role" name="Role" class="form-control" value="@Model.Role" required asp-for="Role">
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Status">Status:</label>
                    <select id="Status" name="Status" class="form-control" value="@Model.Status" required asp-for="Status">
                        <option value="Activated">Activated</option>
                        <option value="Deactivated">Deactivated</option>
                    </select>
                </div>
                <div class="text-center" style="margin-top:5px">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="GetAllUser" asp-controller="GetAllUser" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
